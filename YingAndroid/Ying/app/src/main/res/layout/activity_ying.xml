<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.zyy.Ying.YingActivity" android:orientation="vertical" android:weightSum="1">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="颖: 你现在想要做些什么呢?"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="Ying: 扫描一个二维码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/YingButton1"/>
    <Button
            android:text="Ying: 播放一首音乐"
            android:layout_width="195dp"
            android:layout_height="wrap_content" android:id="@+id/YingButton2"/>


</LinearLayout>
